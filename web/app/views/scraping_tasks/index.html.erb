<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Tarefas de Scraping</h2>
  <%= link_to "Nova Tarefa", new_scraping_task_path, class: "btn btn-primary" %>
</div>

<% if @tasks.any? %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Título da tarefa</th>
          <th>Descrição</th>
          <th>URL</th>
          <th>Marca</th>
          <th>Modelo</th>
          <th>Status</th>
          <th>Criado em</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task["id"] %></td>
            <td><%= task["title"] %></td>
            <td><%= task["description"].presence || "-" %></td>
            <td><%= truncate(task["source_url"].to_s, length: 50) %></td>
            <td><%= task["brand"].presence || "-" %></td>
            <td><%= task["model"].presence || "-" %></td>
            <td>
              <span class="badge bg-<%= status_badge_class(task['status']) %>">
                <%= task["status"] %>
              </span>
            </td>
            <td><%= format_datetime(task["created_at"]) %></td>
            <td>
              <%= link_to "Detalhes", scraping_task_path(task["id"]), class: "btn btn-sm btn-outline-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="text-center text-muted py-5">
    <p>Nenhuma tarefa encontrada.</p>
    <p>Crie sua primeira tarefa de scraping!</p>
  </div>
<% end %>
