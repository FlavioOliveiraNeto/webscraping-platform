<div class="row justify-content-center">
  <div class="col-md-6">
    <h2 class="mb-4">Registrar</h2>

    <%= form_with url: signup_path, method: :post do |f| %>
      <div class="mb-3">
        <%= f.label :email, "E-mail", class: "form-label" %>
        <%= f.email_field :email, class: "form-control", required: true, autofocus: true %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Senha", class: "form-label" %>
        <%= f.password_field :password, class: "form-control", required: true %>
        <div class="form-text">Minimo de 8 caracteres.</div>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirmar Senha", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>

      <%= f.submit "Criar Conta", class: "btn btn-primary" %>
    <% end %>

    <p class="mt-3">
      Ja tem uma conta? <%= link_to "Faca login", login_path %>
    </p>
  </div>
</div>
